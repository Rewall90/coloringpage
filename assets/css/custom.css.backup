.coloring-pages-list-grid {
  display: grid !important;
  gap: 1.5rem !important;
  grid-template-columns: repeat(2, minmax(0, 1fr)); /* Mobile: 2 columns */
}

/* Tablet: 3 columns */
@media (min-width: 640px) {
  .coloring-pages-list-grid {
    grid-template-columns: repeat(3, minmax(0, 1fr)) !important;
  }
}

/* Desktop: 4 columns */
@media (min-width: 768px) {
  .coloring-pages-list-grid {
    grid-template-columns: repeat(4, minmax(0, 1fr)) !important;
  }
}

/* Large Desktop: 5 columns */
@media (min-width: 1024px) {
  .coloring-pages-list-grid {
    grid-template-columns: repeat(5, minmax(0, 1fr)) !important;
  }
}

/* Extra Large: 6 columns */
@media (min-width: 1280px) {
  .coloring-pages-list-grid {
    grid-template-columns: repeat(6, minmax(0, 1fr)) !important;
  }
}

/* Coloring Page Card Styles */
.coloring-page-card {
  position: relative;
  transition: transform 0.2s ease;
}

.coloring-page-card:hover {
  transform: translateY(-4px);
}

/* Coloring Pages Search Container */
.coloring-pages-search-container {
  width: 100%;
  position: relative;
}

.coloring-pages-search-wrapper {
  width: 100%;
}