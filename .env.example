# ----------------
# SANITY CMS (REQUIRED)
# ----------------
# Your Sanity project ID (found in sanity.config.ts)
# Find it at: https://www.sanity.io/manage
SANITY_PROJECT_ID=zjqmnotc

# Sanity dataset name
# Common values: production, development, staging
SANITY_DATASET=production

# Optional: Sanity API token (required for private datasets)
# Generate at: https://www.sanity.io/manage/project/zjqmnotc/api#tokens
# Leave empty for public datasets
SANITY_TOKEN=skUEtk3e3NAlADz1wcrtCp1ZC9LTwHemwLVInXv4v4EWDA62tG8VRHBXJnDYW9OLJyxtk03E4QaM1cp3kVBKPQFOjQm9MwIWoDyUKj7N5U3NNvMD6CzHLGSUOnK2M9aU4sQt5ba7BZA7WXd8RPTNtmEomJuAw0ohLmuCBwY7NCz1SnEFrtbB

# Optional: Sanity API version
# Format: YYYY-MM-DD (default: 2023-05-03)
SANITY_API_VERSION=2023-05-03

# Optional: Webhook secret for verifying webhook requests from Sanity
# Used for automatic rebuilds on content changes
SANITY_WEBHOOK_SECRET=

# ----------------
# HUGO CONFIGURATION
# ----------------
# Hugo environment (development, staging, production)
# Affects build behavior and which config files are loaded
HUGO_ENV=development

# Hugo base URL (optional, usually set in hugo.toml)
# Example: https://mysite-pink-six.vercel.app/
# HUGO_BASEURL=

# Enable/disable Hugo drafts in development
# Set to true to include draft content
HUGO_BUILDDRAFTS=false

# Enable/disable future-dated posts
# Set to true to include future-dated content
HUGO_BUILDFUTURE=false

# ----------------
# BUILD & DEPLOYMENT
# ----------------
# Node environment (development, production, test)
# Affects build optimizations and error reporting
NODE_ENV=development

# Optional: Vercel environment variables
# These are automatically set by Vercel during deployment
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=
# VERCEL_REGION=

# ----------------
# OPTIONAL SERVICES
# ----------------
# Google Analytics (optional)
# Format: G-XXXXXXXXXX
# Add to hugo.toml: googleAnalytics = "G-XXXXXXXXXX"
# GOOGLE_ANALYTICS_ID=

# ----------------
# RESEND EMAIL API (For contact forms and newsletter)
# ----------------
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_aqjuLFCF_Png87x6ins7VHQxWFQ1ZXK3Q

# Email addresses for sending emails
# The 'from' address must be verified in your Resend account
RESEND_FROM_EMAIL=noreply@mysite.com
RESEND_TO_EMAIL=admin@mysite.com

# Newsletter-specific settings
# Create an audience in Resend dashboard and get the audience ID
# Go to: https://resend.com/audiences
RESEND_AUDIENCE_ID=

# Newsletter 'from' address (optional, defaults to RESEND_FROM_EMAIL)
# RESEND_NEWSLETTER_FROM_EMAIL=newsletter@mysite.com

# Sentry Error Tracking (optional)
# For monitoring build errors and runtime issues
# SENTRY_DSN=

# ----------------
# DEVELOPMENT SETTINGS
# ----------------
# Enable verbose logging during build
# Set to true for detailed debug output
DEBUG=false

# Port for Hugo development server
# Default: 1313
HUGO_PORT=1313

# Port for Sanity Studio
# Default: 3333
SANITY_STUDIO_PORT=3333

# ----------------
# IMAGE OPTIMIZATION
# ----------------
# Default image quality for optimization (1-100)
# Lower = smaller files, lower quality
IMAGE_QUALITY_STANDARD=85
IMAGE_QUALITY_THUMBNAIL=75
IMAGE_QUALITY_HERO=90

# Maximum image dimensions
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080

# ----------------
# FEATURE FLAGS (OPTIONAL)
# ----------------
# Enable/disable specific site features
# ENABLE_NEWSLETTER=false
# ENABLE_COMMENTS=false
# ENABLE_SEARCH=true
# ENABLE_ANALYTICS=false

# Real-time Image Transformations (Cloudflare Workers)
# Set to 'true' to enable real-time image transformations via Cloudflare Workers
# Set to 'false' for backward compatibility with pre-built responsive images
# Benefits: 75% reduction in KV storage, 4x faster builds, flexible sizing
USE_REAL_TIME_TRANSFORMS=false

# ----------------
# CACHING & PERFORMANCE
# ----------------
# Cache duration in seconds for fetched content
# Default: 900 (15 minutes)
# CONTENT_CACHE_DURATION=900

# Enable CDN for production builds
# ENABLE_CDN=true

# ----------------
# IMPORTANT NOTES
# ----------------
# 1. NEVER commit .env files with real values to version control
# 2. Use .env.local for local development (git-ignored)
# 3. Use .env.production for production builds (git-ignored)
# 4. Add all production variables to Vercel dashboard:
#    - Go to: https://vercel.com/your-team/your-project/settings/environment-variables
# 5. Keep this .env.example file updated when adding new variables
# 6. Required variables will cause build failures if missing
# 7. Optional variables have sensible defaults