{
  "name": "mysite",
  "version": "1.0.0",
  "description": "Hugo static site with Sanity CMS integration for managing coloring pages",
  "type": "module",
  "scripts": {
    "fetch-content": "node scripts/fetch-sanity-content.js",
    "fetch-content-sections": "node scripts/fetch-sanity-content-sections.js",
    "build": "npm run fetch-content-sections && hugo",
    "build:hugo": "hugo",
    "dev": "npm run fetch-content-sections && hugo server -D",
    "preview": "npm run fetch-content-sections && hugo server --environment production",
    "clean": "rm -rf public resources",
    "lint": "eslint scripts",
    "lint:fix": "eslint scripts --fix",
    "format": "prettier --write scripts/**/*.js *.json *.md",
    "format:check": "prettier --check scripts/**/*.js *.json *.md",
    "code-quality": "npm run lint && npm run format:check",
    "code-quality:fix": "npm run lint:fix && npm run format",
    "test:images": "node scripts/test-image-transformations.js",
    "deploy:worker": "bash scripts/deploy-enhanced-worker.sh development",
    "deploy:worker:prod": "bash scripts/deploy-enhanced-worker.sh production",
    "prepare": "husky install",
    "test": "echo 'No tests configured yet'"
  },
  "keywords": [
    "hugo",
    "sanity",
    "static-site",
    "coloring-pages",
    "cms"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@react-email/components": "^0.5.0",
    "@sanity/client": "^6.10.0",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0",
    "react-email": "^4.2.8",
    "resend": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/js-yaml": "^4.0.5",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": "22.x"
  },
  "repository": {
    "type": "git",
    "url": ""
  }
}
